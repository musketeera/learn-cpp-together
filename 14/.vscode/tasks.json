{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: launch.json 生成活动文件",
            "command": "d:\\example\\.vscode\\launch.json",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
